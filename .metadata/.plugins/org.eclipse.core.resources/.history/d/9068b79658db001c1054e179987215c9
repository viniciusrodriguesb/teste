package Calculadora;

import Calculos.Calculadora;
import java.util.Scanner;

public class App {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);

		Calculadora cal = new Calculadora();
		int op;

		System.out.println("Digite a operação que deseja realizar: (1: +, 2: -, 3: *, 4: /)");
		op = scan.nextInt();

		System.out.println("Digite o valor 1: ");
		cal.setValor1(scan.nextDouble());

		System.out.println("Digite o valor 2: ");
		cal.setValor2(scan.nextDouble());

		if (op == 1) {
			System.out.println("Resultado da soma é: " + cal.somar());
		} else if (op == 2) {
			System.out.println("Resultado da subtração é: " + cal.subtrair());
		} else if (op == 3) {
			System.out.println("Resultado da multiplicação é: " + cal.multiplicar());
		} else if (op == 4) {
			double calculo = 0;
			calculo = cal.dividir();
			if (calculo == 0) {
				System.out.println("Não é permitido usar 0 na divisão!");
			} else {
				System.out.println("Resultado da divisão é: " + calculo);
			}
		}
	}
}